name: Auto-assign to Project

on:
  issues:
    types: [opened]

jobs:
  add-to-project:
    runs-on: ubuntu-latest
    steps:
      - name: Add issue to project
        uses: actions/add-to-project@v0.5.0
        with:
          project-url: https://github.com/users/jmarcm/projects/7/
          github-token: ${{ secrets.PAT_TOKEN }}
